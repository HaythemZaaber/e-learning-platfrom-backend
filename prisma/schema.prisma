generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  clerkId     String   @unique
  email       String   @unique
  firstName   String?
  lastName    String?
  phone       String?
  address     String?
  city        String?
  state       String?
  zip         String?
  country     String?
  role        UserRole @default(VISITOR)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  // courses     Course[]
  // enrollments Enrollment[]
  
  @@map("users")
}

enum UserRole {
  ADMIN
  INSTRUCTOR
  STUDENT
  PARENT
  VISITOR
}